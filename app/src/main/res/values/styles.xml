    <!-- Base style for all cards -->
    <style name="BaseCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:backgroundTint">@color/cardBgColor</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Base style for inner RelativeLayouts -->
    <style name="BaseCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/card_stroke</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <!-- Title text inside any card -->
    <style name="CardTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Description text inside any card -->
    <style name="CardDescriptionText">
        <item name="android:textSize">14sp</item>
