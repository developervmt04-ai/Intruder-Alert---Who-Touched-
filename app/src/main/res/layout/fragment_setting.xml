<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBgColor"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appBgColor"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ep_back" />

            <TextView
                android:id="@+id/toolbarTitle"
                style="@style/ToobarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/settings" />

        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height=".6dp"
        android:background="@color/strokeColor" />

    <!-- Scrollable area for cards (fills space between toolbar and ad) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/premiumLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/premiumColor"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/premiumIcn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/premiumicon" />

                        <LinearLayout
                            android:id="@+id/textContainer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/premiumIcn"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/premiumTitle"
                                style="@style/SettingTitleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/upgrade_premium"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/premiumBody"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/adfree" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/premiumMoreButton"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/moreblackicon" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/advance" />

                <androidx.cardview.widget.CardView style="@style/BaseCard">

                    <RelativeLayout style="@style/BaseCardContent">

                        <ImageView
                            android:id="@+id/fingerImg"
                            style="@style/CardIcon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/fingerprinticon" />

                        <LinearLayout
                            android:id="@+id/textContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/fingerImg"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fingerTitle"
                                style="@style/SettingTitleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/finger_print_lock" />

                            <TextView
                                style="@style/DescriptionText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/protect_app_from_intruders" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/hotBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="12dp"
                            android:layout_toStartOf="@id/bioMetricSwitch"
                            android:backgroundTint="#E53935"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:text="Hot"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/bioMetricSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:checked="false"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:thumbTint="@color/white"
                            app:track="@drawable/swtich_toggle"
                            app:trackTint="@color/switch_track" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subscriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/subscriptions" />

                <androidx.cardview.widget.CardView style="@style/BaseCard">

                    <RelativeLayout style="@style/BaseCardContent">

                        <ImageView
                            android:id="@+id/subscriptionImg"
                            style="@style/CardIcon"
                            android:src="@drawable/subscriptionicon"
                            android:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/subscriptionImg"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SettingTitleText"
                                android:text="@string/manage_subscriptions" />

                            <TextView
                                style="@style/DescriptionText"
                                android:text="@string/your_plan_billing_and_renewal_info" />
                        </LinearLayout>

                        <ImageView
                            style="@style/CardNextIcon"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/nexticon" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/general" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/selfieAttempt"
                        style="@style/BaseCard"

                        android:clickable="true"
                        android:focusable="true">

                        <RelativeLayout
                            android:id="@+id/selfieLayout"
                            style="@style/BaseCardContent">

                            <ImageView
                                android:id="@+id/selfieIcon"
                                style="@style/CardIcon"
                                android:layout_centerVertical="true"
                                android:src="@drawable/cameraicon"
                                android:tint="@color/white" />

                            <LinearLayout
                                android:id="@+id/selfietextContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/selfieIcon"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/SettingTitleText"
                                    android:text="@string/intruder_selfie" />

                                <TextView
                                    android:id="@+id/selfieDescription"
                                    style="@style/DescriptionText"
                                    android:text="@string/take_photos_after_01_wrong_attempts" />
                            </LinearLayout>

                            <ImageView
                                style="@style/CardNextIcon"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:src="@drawable/nexticon" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView style="@style/BaseCard">

                        <RelativeLayout
                            android:id="@+id/delayLayout"
                            style="@style/BaseCardContent">

                            <ImageView
                                android:id="@+id/delayIcon"
                                style="@style/CardIcon"
                                android:layout_centerVertical="true"
                                android:src="@drawable/timericon"
                                android:tint="@color/white" />

                            <LinearLayout
                                android:id="@+id/delayText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/delayIcon"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/SettingTitleText"
                                    android:text="@string/picture_delay" />

                                <TextView
                                    android:id="@+id/delayDescription"
                                    style="@style/DescriptionText"
                                    android:text="@string/delayText" />
                            </LinearLayout>

                            <ImageView
                                style="@style/CardNextIcon"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:src="@drawable/nexticon" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/widget_setup" />


                <androidx.cardview.widget.CardView style="@style/BaseCard">

                    <RelativeLayout
                        android:id="@+id/addwidgeteLayout"
                        style="@style/BaseCardContent">

                        <ImageView
                            android:id="@+id/addWidgetIcon"
                            style="@style/CardIcon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/add_widget_icon"
                            android:tint="@color/white" />

                        <LinearLayout
                            android:id="@+id/addWidgetText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/addWidgetIcon"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SettingTitleText"
                                android:text="@string/add_widget" />
                        </LinearLayout>

                        <ImageView
                            style="@style/CardNextIcon"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/nexticon" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView style="@style/BaseCard">

                    <RelativeLayout
                        android:id="@+id/howToAdd"
                        style="@style/BaseCardContent">

                        <ImageView
                            android:id="@+id/questionIcon"
                            style="@style/CardIcon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/questionicon"
                            android:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/questionIcon"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SettingTitleText"
                                android:text="@string/how_to_add_widget" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/nexticon" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/about" />

                <androidx.cardview.widget.CardView style="@style/BaseCard">

                    <RelativeLayout

                        android:id="@+id/aboutLayout"
                        style="@style/BaseCardContent"
                        android:padding="24dp">

                        <ImageView
                            style="@style/CardIcon"
                            android:id="@+id/rateusIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/rateus_icon"
                            android:tint="@color/white" />

                        <LinearLayout
                            android:id="@+id/rateUs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"

                            android:layout_toEndOf="@id/rateusIcon"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SettingTitleText"

                                android:text="Rate Us" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/nexticon" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/BaseCard">

                    <RelativeLayout
                        android:id="@+id/shareLayout"
                        style="@style/BaseCardContent">

                        <ImageView
                            android:id="@+id/shareIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_share"
                            android:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/shareIcon"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SettingTitleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/share" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/nexticon" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/BaseCard">

                    <RelativeLayout
                        android:id="@+id/termsOfUselayoyt"
                        style="@style/BaseCardContent">

                        <ImageView
                            android:id="@+id/termsofUse"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_term_of_use"
                            android:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/termsofUse"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SettingTitleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/terms_of_use" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/nexticon" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView style="@style/BaseCard">

                    <RelativeLayout
                        android:id="@+id/privacyPolicyLayout"
                        style="@style/BaseCardContent">

                        <ImageView
                            android:id="@+id/privcyPolicy"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_privacy"
                            android:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/privcyPolicy"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SettingTitleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/privacy_policy" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/nexticon" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Native ad fixed at the bottom -->
    <FrameLayout
        android:id="@+id/nativeAdRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
