<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:ignore="UselessParent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appBgColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/Alarm"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/toolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ep_back"
                android:importantForAccessibility="yes"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:gravity="center"
                android:id="@+id/toolbarTitle"
                style="@style/ToobarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/backIcon"
                android:importantForAccessibility="yes"
                android:singleLine="true"
                android:text="Icon Camouflage" />
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/strokeColor"
        app:layout_constraintTop_toBottomOf="@id/mainToolbar" />

    <!-- Preview container -->
    <FrameLayout
        android:id="@+id/previewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/squre"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blurbg"
            android:importantForAccessibility="yes"
        />
    </FrameLayout>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/iconsText"
        style="@style/DescriptionText"
        ads:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        android:text="@string/icons"
        ads:layout_constraintTop_toBottomOf="@+id/previewContainer"
      />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/iconRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/iconsText"
        app:layout_constraintBottom_toTopOf="@id/premiumIconRv"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Premium Icons RecyclerView -->

    <!-- Buttons container -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/premiumIconRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconRV" />

    <FrameLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:layout_margin="5dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/premiumIconRv"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/applyBtn"
            style="@style/Button2"
            android:text="@string/applied"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/premiumBtnapply"
            style="@style/premiumButton"
            android:text="@string/apply"
            android:visibility="gone"
            app:icon="@drawable/premiumicon"
            app:iconGravity="textStart"/>
    </FrameLayout>

    <!-- AdView -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintTop_toBottomOf="@id/buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
